<resources xmlns:tools="http://schemas.android.com/tools">
<!-- Base application theme. -->
    <style name="Theme.HafezDivination" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#F44336</item>
        <item name="colorPrimaryVariant">#CF1C0F</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#001371</item>
        <item name="colorSecondaryVariant">#151E49</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#730E07</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.HafezDivination.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.HafezDivination.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.HafezDivination.PopupOverlay"
        parent="ThemeOverlay.AppCompat.Light" />
</resources>

